<section class="clearfix">
		<%= form_for(Post.new, :url => network_posts_path) do |f| %>
		  <div class="form-group">
		  	<%= f.text_area :description, :rows => 2, :class => "form-control", :placeholder => "Publicar alguma novidade..." %>
		  </div>
		  <div class="form-group">
		  	<button type="submit" class="btn btn-success btn-md pull-right">
		  		<strong>Publicar</strong>
		  	</button>
		  </div>
		<% end %>
	</section>